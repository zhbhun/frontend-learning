/* pages/example/chat/index.wxss */
.hidden {
  display: none;
}
.list__item-voice {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100rpx;
  min-width: 200rpx;
  background-color: green;
}
.footer {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 750rpx;
  min-height: 100rpx;
  border-top: 1rpx solid #ddd;
  padding: 20rpx 20rpx;
  background-color: #f5f5f5;
}
.recorder-btn {
  box-sizing: border-box;
  flex: 1;
  margin: 0 20rpx;
  height: 60rpx;
  border-radius: 4rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fff;
}
.input {
  box-sizing: border-box;
  flex: 1;
  margin: 0 20rpx;
  width: 100%;
  min-height: 60rpx;
  max-height: 140rpx;
  border-radius: 4rpx;
  padding: 10rpx 12rpx;
  line-height: 40rpx;
  background-color: #fff;
}