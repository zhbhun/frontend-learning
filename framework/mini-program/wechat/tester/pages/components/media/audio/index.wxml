<view>
  <audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop></audio>
  <button type="primary" bindtap="handlePlay">播放</button>
  <button type="primary" bindtap="handlePause">暂停</button>
  <button type="primary" bindtap="handleAudio14">播放 14 秒</button>
  <button type="primary" bindtap="handleAudioStart">回到开头</button>

</view>